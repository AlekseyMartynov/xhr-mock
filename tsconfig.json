{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "es5",
      "es2015",
      "dom"
    ],
    "outDir": "./lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*"
  ]
}
